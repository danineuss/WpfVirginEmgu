<Window x:Class="WpfVirginEmgu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVirginEmgu"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="761.486">
    <Grid Margin="0,0,-8,10">
        <Image Source="{Binding ImageSource}" Name="LeftImage" HorizontalAlignment="Left" Height="217" Margin="48,33,0,0" VerticalAlignment="Top" Width="321"/>
        <Image Source="{Binding Image}" Name="RightImage" HorizontalAlignment="Left" Height="217" Margin="408,33,0,0" VerticalAlignment="Top" Width="321"/>
        <Button Command="{Binding LoadCommand}" Content="Load Image" HorizontalAlignment="Left" Margin="48,266,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
